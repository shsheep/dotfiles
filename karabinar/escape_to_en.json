{
    "title": "Convert to english input when pressing ESC",
    "rules": [
        {
            "description":"Convert to english input when pressing ESC",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "escape",
                        "modifiers": {
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "escape"
                        }
                    ],
                    "to_after_key_up": [
                        {
                            "select_input_source": {
                                "language": "en"
                            }
                        },
                        {
                            "key_code": "escape"
                        }
                    ],
                    "conditions": [ 
                        { 
                            "type": "frontmost_application_if",
                            "bundle_identifiers": [
                                "^com\\.googlecode\\.iterm2$",
                                "^org\\.alacritty$",
                                "^com\\.google\\.Chrome$",
                                "^com\\.jetbrains\\.intellij\\.ce$",
                                "^com\\.tinyspeck\\.slackmacgap$",
                                "^com\\.apple\\.Notes$",
                                "^com\\.microsoft\\.VSCode$",
                                "^notion\\.id$"
                            ]
                        }
                    ]
                }
            ]
        }
    ]
}
